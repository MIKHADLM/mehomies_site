rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Produits: lecture publique, écriture interdite depuis le client
    match /produits/{productId} {
      allow read: if true;
      allow write: if false;
    }

    // Orders: création par utilisateur connecté uniquement, lecture par propriétaire, MAJ côté serveur uniquement
    match /orders/{orderId} {
      // Only allow create from clients for pending orders owned by the caller.
      allow create: if request.auth != null
                    && request.resource.data.status == 'pending'
                    && request.resource.data.userId == request.auth.uid
                    && (request.time != null);

      // Only allow read for the owner
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;

      // No client-side updates or deletes
      allow update, delete: if false;
    }

    // Counter and other sensitive collections: deny all from client
    match /Counter/{docId} {
      allow read, write: if false;
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
