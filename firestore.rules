rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Produits: lecture publique, écriture interdite depuis le client
    match /produits/{productId} {
      allow read: if true;
      allow write: if false;
    }

    // Orders: accès client désactivé. Lecture/écriture uniquement via Cloud Functions (serveur)
    match /orders/{orderId} {
      allow read, write: if false;
    }

    // Counter and other sensitive collections: deny all from client
    match /Counter/{docId} {
      allow read, write: if false;
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
